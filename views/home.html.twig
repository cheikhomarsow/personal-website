{% extends 'layout.html.twig' %}

{% block content %}
    <main class="home_page">
        <div class="about_me">
            <p>Bienvenue sur mon site ! Je m'appelle Cheikh Omar, j'ai 23 ans et je suis passionné par tout ce qui touche à l'informatique.</p>
        </div>
        <div class="last-posts">
            <h3 class="title">Articles récents</h3>
            {% for article in  availableArticle %}
                <div class="article_summary">
                        <h3>
                            {% autoescape false %}
                                <a class="title_article" href="?action=article&token={{ article.token }}">
                                    {{ article.title | striptags }}
                                </a>
                            {% endautoescape %}
                        </h3>
                        <p class="resume_autor">By <span class="autor">{{autor.username}}</span> - <span class="date">{{ article.date | date("M d Y") }}</span>&nbsp;&nbsp;<img class="icon_comment" src="assets/img/chat2.png">&nbsp;&nbsp;</p>
                        <a class="etc" href="?action=article&token={{ article.token }}">
                            <img class="img" src="{{ article.file }}" alt="article_img">
                        </a>
                        <p class="content_article">
                            {% autoescape false %}
                                {{ article.content | raw | slice(0, 140) }} <a class="etc" href="?action=article&token={{ article.token }}">[Lire la suite]</a>
                            {% endautoescape %}
                        </p>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
